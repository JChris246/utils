<div id="jwt-decoder-tool" class="tool-content hidden">
    <div class="mb-6">
        <h2 class="text-2xl font-bold text-stone-200 mb-2">JWT Decoder</h2>
        <p class="text-stone-400">Decode and inspect JSON Web Tokens (JWT) to view their header and payload information.</p>

        <!-- Warning Notice -->
        <div class="mt-4 p-3 border border-amber-600 bg-amber-900/20 text-amber-400 rounded-lg">
            <div class="flex items-start">
                <svg class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742
                        2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1
                        1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
                <div>
                    <div class="font-medium">Security Notice</div>
                    <div class="text-sm mt-1">This tool only decodes JWT tokens for inspection. Token signatures are
                        <strong>not verified</strong>. Do not use this for authentication or security validation.</div>
                </div>
            </div>
        </div>
    </div>

    <div class="space-y-4">
        <div>
            <label for="jwt-input" class="block text-sm font-medium text-stone-300 mb-2">JWT Token</label>
            <textarea id="jwt-input" rows="8" placeholder="Paste your JWT token here..." class="w-full p-4 border
                border-stone-600 bg-stone-700 text-stone-200 rounded-lg resize-y font-mono text-sm"></textarea>
        </div>

        <button id="decode-jwt" onclick="decodeJwt()" class="w-full lg:w-auto px-6 py-3 bg-sky-600 hover:bg-sky-500 text-white
            font-medium rounded-lg cursor-pointer">
            Decode JWT
        </button>

        <!-- Error Display -->
        <div id="jwt-error" class="hidden p-4 border border-red-600 bg-red-900/20 text-red-400 rounded-lg">
            <div class="flex items-start">
                <svg class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293
                        1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0
                        00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
                <div>
                    <div class="font-medium">Invalid JWT Token</div>
                    <div id="jwt-error-message" class="text-sm mt-1"></div>
                </div>
            </div>
        </div>

        <div id="jwt-results" class="hidden space-y-4">
            <!-- Header Section -->
            <div>
                <label class="flex items-center text-sm font-medium text-stone-300 mb-2">
                    <svg class="w-4 h-4 mr-2 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756
                            2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065
                            2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724
                            0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0
                            00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924
                            0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                    Header
                </label>
                <div class="border border-stone-600 bg-stone-700 rounded-lg">
                    <div class="p-3 border-b border-stone-600 bg-stone-800 rounded-t-lg">
                        <span class="text-xs font-medium text-stone-400 uppercase tracking-wide">Algorithm & Token Type</span>
                    </div>
                    <textarea id="jwt-header" rows="6" readonly class="w-full p-3 bg-transparent text-stone-200 rounded-b-lg
                        font-mono text-sm resize-none border-0 focus:outline-none"></textarea>
                </div>
            </div>

            <!-- Payload Section -->
            <div>
                <label class="flex items-center text-sm font-medium text-stone-300 mb-2">
                    <svg class="w-4 h-4 mr-2 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2
                            2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    Payload
                </label>
                <div class="border border-stone-600 bg-stone-700 rounded-lg">
                    <div class="p-3 border-b border-stone-600 bg-stone-800 rounded-t-lg">
                        <span class="text-xs font-medium text-stone-400 uppercase tracking-wide">Claims & Data</span>
                    </div>
                    <textarea id="jwt-payload" rows="16" readonly class="w-full p-3 bg-transparent text-stone-200 rounded-b-lg
                        font-mono text-sm resize-none border-0 focus:outline-none"></textarea>
                </div>
            </div>

            <!-- Token Info -->
            <div id="jwt-info" class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="p-4 border border-stone-600 bg-stone-700 rounded-lg">
                    <div class="text-xs font-medium text-stone-400 uppercase tracking-wide mb-1">Algorithm</div>
                    <div id="jwt-algorithm" class="text-stone-200 font-mono text-sm">-</div>
                </div>
                <div class="p-4 border border-stone-600 bg-stone-700 rounded-lg">
                    <div class="text-xs font-medium text-stone-400 uppercase tracking-wide mb-1">Issued At</div>
                    <div id="jwt-issued" class="text-stone-200 font-mono text-sm">-</div>
                </div>
                <div class="p-4 border border-stone-600 bg-stone-700 rounded-lg">
                    <div class="text-xs font-medium text-stone-400 uppercase tracking-wide mb-1">Expires At</div>
                    <div id="jwt-expires" class="text-stone-200 font-mono text-sm">-</div>
                </div>
            </div>
        </div>
    </div>
</div>